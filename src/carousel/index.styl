.c-carousel.is-animated .c-carousel-draggable
  transition: transform $transition

.c-carousel-wrapper
  // prevent shadows from cutting
  width: 100%
  margin: -5px 0
  padding: 5px 0
  overflow-x: hidden

.c-carousel-draggable
  display: inline-block

.c-carousel-list
  white-space: nowrap
  cursorDraggable()

.c-carousel-item
  padding: 0 5px
  display: inline-block
  vertical-align: top
  white-space: normal
